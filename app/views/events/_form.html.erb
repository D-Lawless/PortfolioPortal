<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Event Title", input_html:{ class: "input[type=text]"}, wrapper: false, label_html: {class: "label"}, placeholder: "Title of Event" %>
      <%= f.input :info, label: "Event info", input_html:{ class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "About Event" %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<%end%>