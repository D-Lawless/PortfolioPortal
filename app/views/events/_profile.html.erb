<div class="column is-one-quarter">
  <nav class="panel">
    <p class="panel-heading">Profile</p>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= current_user.first_name %></strong><br />
              <small><%= current_user.username %></small>
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Active Events</p>
            <p class="title is-6"><%= current_user.events.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Connections</p>
            <p class="title is-6">14</p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Collaberations</p>
            <p class="title is-6">4</p>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>